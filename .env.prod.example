# LinkedIn AI Platform - Production Environment Configuration
# Copy this file to .env.prod and update with your actual values

# Application Configuration
MIX_ENV=prod
SECRET_KEY_BASE=your_64_character_secret_key_base_generate_with_mix_phx_gen_secret
PHX_HOST=your-domain.com
PORT=4000
PHX_SERVER=true

# Database Configuration
DB_PASSWORD=your_secure_database_password
DATABASE_URL=postgresql://linkedin_ai:${DB_PASSWORD}@db:5432/linkedin_ai_prod
POOL_SIZE=15

# Redis Configuration
REDIS_URL=redis://redis:6379/0

# External API Keys
OPENAI_API_KEY=sk-your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=1000
OPENAI_TIMEOUT=30000

# LinkedIn API Configuration
LINKEDIN_CLIENT_ID=your_linkedin_client_id
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret
LINKEDIN_API_BASE_URL=https://api.linkedin.com
LINKEDIN_TIMEOUT=15000

# Stripe Configuration
STRIPE_PUBLIC_KEY=pk_live_your_stripe_public_key
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret
STRIPE_API_VERSION=2023-10-16

# Email Configuration (SMTP)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USERNAME=your_smtp_username
SMTP_PASSWORD=your_smtp_password
FROM_EMAIL=noreply@your-domain.com
FROM_NAME=LinkedIn AI Platform

# AWS S3 Configuration (Optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=your-s3-bucket-name
AWS_S3_BACKUP_BUCKET=your-backup-bucket-name

# SSL Configuration
SSL_KEY_PATH=/etc/nginx/ssl/privkey.pem
SSL_CERT_PATH=/etc/nginx/ssl/fullchain.pem

# Monitoring Configuration
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
LOG_LEVEL=info
TELEMETRY_ENABLED=true

# Grafana Configuration
GRAFANA_PASSWORD=your_secure_grafana_password

# Security Configuration
CORS_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Rate Limiting
API_RATE_LIMIT_PER_HOUR=1000
CONTENT_GENERATION_RATE_LIMIT_PER_HOUR=50

# Background Jobs
OBAN_QUEUES=default:10,content:5,analytics:3,emails:2

# Health Check Configuration
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_DB_TIMEOUT=5000
HEALTH_CHECK_REDIS_TIMEOUT=3000

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_S3_ENABLED=true

# Feature Flags
FEATURE_COMPETITOR_ANALYSIS=true
FEATURE_ADVANCED_ANALYTICS=true
FEATURE_BULK_CONTENT_GENERATION=true