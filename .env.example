# LinkedIn AI Platform Environment Variables

# Database Configuration
DATABASE_URL=ecto://postgres:postgres@localhost/linkedin_ai_dev
POOL_SIZE=10

# Phoenix Configuration
SECRET_KEY_BASE=your_secret_key_base_here
PHX_HOST=localhost
PORT=4000
PHX_SERVER=true

# OpenAI Configuration
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_ORG_ID=org-your-organization-id-here

# Stripe Configuration
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# LinkedIn API Configuration
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_REDIRECT_URI=http://localhost:4000/auth/linkedin/callback

# AWS Configuration (for file storage)
AWS_ACCESS_KEY_ID=your_aws_access_key_id_here
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key_here
AWS_REGION=us-east-1
AWS_S3_BUCKET=linkedin-ai-storage

# Email Configuration (Mailtrap for development)
SMTP_RELAY=sandbox.smtp.mailtrap.io
SMTP_USERNAME=your_mailtrap_username
SMTP_PASSWORD=your_mailtrap_password
SMTP_PORT=587

# Production specific
ECTO_IPV6=false
DNS_CLUSTER_QUERY=your_dns_cluster_query_here